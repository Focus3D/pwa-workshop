{
  "name": "pwa-workshop",
  "description": "A PWA workshop",
  "version": "1.0.0",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "dependencies": {
    "chai": "^4.1.1",
    "github-markdown-css": "^2.8.0",
    "koa": "^2.3.0",
    "koa-route": "^3.2.0",
    "markdown-it": "^8.4.0",
    "mocha": "^3.5.0",
    "superagent": "^3.6.0",
    "sw-test-env": "^1.1.2"
  },
  "devDependencies": {
    "buddy": "^6.14.2",
    "buddy-server": "^3.1.0"
  },
  "repository": "https://github.com/popeindustries/pwa-workshop.git",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/index.js",
    "watch": "buddy --serve --reload watch"
